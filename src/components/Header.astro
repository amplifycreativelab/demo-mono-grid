---
const links = [
    { href: "/work", label: "Work" },
    { href: "/services", label: "Services" },
    { href: "/studio", label: "Studio" },
    { href: "/contact", label: "Contact" },
];

const siteBase = import.meta.env.BASE_URL;

// Helper to handle base path correctly
function getLink(path: string) {
    if (path === "/") return siteBase;
    return `${siteBase}${path.startsWith("/") ? path.slice(1) : path}`;
}
---

<header class="site-header">
    <div class="header-inner">
        <a href={getLink("/")} class="logo">MonoGrid</a>

        <nav>
            <ul class="nav-list">
                {
                    links.map((link) => (
                        <li>
                            <a href={getLink(link.href)}>{link.label}</a>
                        </li>
                    ))
                }
            </ul>
        </nav>
    </div>
</header>

<style>
    .site-header {
        padding: var(--space-4) 0;
        margin-bottom: var(--space-6);
    }

    .header-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--space-4);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @media (min-width: 768px) {
        .header-inner {
            padding: 0 var(--space-6);
        }
    }

    .logo {
        font-family: var(--font-heading);
        font-weight: 600;
        font-size: 1.25rem;
        letter-spacing: -0.02em;
    }

    .nav-list {
        display: flex;
        gap: var(--space-3);
    }

    .nav-list a {
        font-size: 0.9375rem; /* 15px */
        color: var(--color-ink);
        opacity: 0.8;
        transition: opacity 0.2s ease;
    }

    .nav-list a:hover {
        opacity: 1;
        text-decoration: underline;
        text-decoration-color: var(--color-oxide);
        text-underline-offset: 4px;
    }
</style>
